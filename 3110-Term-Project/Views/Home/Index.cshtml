@model StatsView

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<div class="card mt-4">
    <div class="card-body">
        <h4>Site Statistics</h4>
        <ul>
            <li><strong>Total People:</strong> @Model.TotalPeople</li>
            <li><strong>Total Events:</strong> @Model.TotalEvents</li>
            <li><strong>Total Registrations:</strong> @Model.TotalRegistrations</li>
        </ul>
    </div>
</div>